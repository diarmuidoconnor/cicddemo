{
  "name": "node_lab1",
  "version": "1.0.0",
  "description": "node lab 1",
  "main": "index.js",
  "scripts": {
    "build-babel": "babel -d ./build ./src -s",
    "clean": "rimraf build && mkdir build ",
    "build": "npm run clean && npm run build-babel",
    "start-prod": "npm run build && node ./build/index.js",
    "start-dev": "nodemon --exec babel-node src/index.js",
    "clean-client": "rimraf client/build && rimraf ./build/public",
    "build-client": "cd client && npm install && npm run build",
    "copy-client": "cpx \"client/build/**/*\"  build/public",
    "build-prod-client": "npm run clean-client && npm run build-client && npm run copy-client",
    "install-client-mods": "cd client/ && npm install && npm install --only=dev --no-shrinkwrap",
    "heroku-postbuild": "npm run build && npm run install-client-mods && npm run build-prod-client",
    "ignore": "npm run build && npm run build-prod-client",
    "test": "mocha --require babel-core/register --require babel-polyfill --exit  test/e2e/*.js"
  },
  "author": "fxwalsh",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.4",
    "eslint": "^4.16.0",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-react": "^7.7.0",
    "mocha": "^5.2.0",
    "mochawesome": "^3.0.2",
    "nodemon": "^1.14.11",
    "puppeteer": "^1.5.0",
    "rimraf": "^2.6.2",
    "should": "^13.2.1",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.2",
    "config": "^1.30.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-async-handler": "^1.1.1",
    "lodash": "^4.17.5",
    "morgan": "^1.9.0",
    "serve-favicon": "^2.5.0"
  }
}
